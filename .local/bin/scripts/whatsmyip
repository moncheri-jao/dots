#!/bin/bash
#touch /tmp/ip
wifi=$(ifconfig wlp1s0 | grep 'inet' | cut -d: -f2)
eth=$(ifconfig enp2s0f3u3 | grep 'inet' | cut -d: -f2 | awk '{print $2}' | tr -d "\n")
#sed -i '/^[[:space:]]*$/d' /tmp/ip
if [ -z "$wifi" ] && [ -z "$eth" ]; then
	echo "disconnected"
elif [[ -z "$eth" ]]; then
	echo "$wifi"
elif [[ -z "$wifi" ]]; then
	echo "$eth"
fi
